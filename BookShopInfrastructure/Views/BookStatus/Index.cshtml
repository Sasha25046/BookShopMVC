@model IEnumerable<BookShopDomain.Model.BookStatus>

<h2>Статуси книг</h2>

<p>
    <a asp-controller="BookStatus" asp-action="Create" class="btn btn-primary">Додати</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-controller="BookStatus"
                       asp-action="Edit"
                       asp-route-id="@item.Id"
                       class="btn btn-warning">
                        Змінити
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
